---
import { getCollection, getEntry } from 'astro:content';
import Author from '@/components/ui/Author.astro';
import Container from '@/components/Container.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DEFAULT_CONFIGURATION } from '@/lib/constants';
import Studies from '@/components/ui/studies.astro';
import PostPreview from '@/components/ui/PostPreview.astro';

const entry = await getEntry('pages', 'studies');
const studies = await getCollection('studies');
---

<BaseLayout seo={entry.data.seo}>
  <Container as='section' class='py-6'>
    <Author {...DEFAULT_CONFIGURATION.author} />
  </Container>
  {
    sortedJobs.length > 0 && (
      <Container as='section' class='py-6'>
        <div class="flex flex-col gap-5">
          <span class="text-headings">Studies</span>
          <ul class="flex flex-col gap-8">
            <Studies entry={studies} />
          </ul>
        </div>
      </Container>
    )
  }
</BaseLayout>
